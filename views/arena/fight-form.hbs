    <form action="/arena/fight" method="POST" class="warrior-select" style="width: 100%">
        <div class="selected">
            {{> warrior-select select-name="warrior1Id"}}
            {{> warrior-select select-name="warrior2Id"}}
        </div>

        <button type="submit" class="button">KAMPF STARTEN</button>
    </form>

    <div class="list-of-fighter">
    {{#each warriors}}
        <div class="fighter">
            <h3>{{this.name}} ({{this.wins}})</h3>
            <div>
                <i class="fa-solid fa-battery-full"></i>
                <span>{{this.power}}</span>
            </div>
            <div>
                <i class="fa-solid fa-shield-halved"></i>
                <span> {{this.defence}}</span>
            </div>
            <div>
                <i class="fa-regular fa-heart"></i>
                <span>{{this.durability}}</span>
            </div>
            <div>
                <i class="fa-solid fa-brain"></i>
                <span>{{this.agility}}</span>
            </div>
        </div>
    {{/each}}
    </div>

